<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dawang.androidexample">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".http.HttpsActivity" />
        <activity android:name=".window.WindowActivity" />
        <activity android:name=".animation.AnimationActivity" />
        <activity android:name=".mvp.view.MvpActivity" />
        <activity android:name=".designpattern.DesignPatternActivity" />
        <activity android:name=".view.ViewActivity" />
        <activity android:name=".widget.fragment.FragmentActivity" />
        <activity
            android:name=".widget.WidgetActivity"
            android:label="@string/title_activity_widget"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".widget.recyclerview.RecyclerViewActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".rxjava.RxActivity"
            android:label="@string/title_activity_rx"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".widget.WebViewActivity"
            android:label="@string/title_activity_web_view"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".widget.fragment.ActivityLife"
            android:label="@string/title_activity_life"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".widget.fragment.ActivityTransparent"
            android:theme="@style/Theme.AppCompat.Dialog">
        </activity>
    </application>

</manifest>